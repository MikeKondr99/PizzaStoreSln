<!DOCTYPE html>
<html lang="en">
	<!-- Header -->
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PizzaStore </title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PizzaStore.styles.css" asp-append-version="true" />
</head>
	<!-- Body -->
<body>
	<p><a name="top"></a></p>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	
	<!-- Footer -->
	<footer class="border-top footer text-muted">
		<div class="container" style="text-align:right; font-color:black">
			<a href="about">About</a> -
			<a href="https://github.com/MikeKondr99/PizzaStoreSln">Source (GitHub Page)</a> -
			<a href="#top">To the top</a> -
			<a href="#top">8-800-555-35-35</a> -
			<a href="#top">PizzaStore@gmail.com</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
