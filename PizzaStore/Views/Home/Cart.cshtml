@using PizzaStore.Database
@model IEnumerable<(Product prod, int count)>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="css/cart-styles.css">
</head>

<a class="category">Корзина</a>

<body>
    @foreach (var (item, count) in Model)
    {
        <div class="product">
            <div class="image">
                <img src="@Html.DisplayFor(modelItem => item.ImageSource)">
                <div class="info">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.Description)</h4>
                </div>
                <div>
                    <div class="buttons">
                        <button onclick="add(item.Id, 1)" name="plus">
                            <ion-icon name="remove-outline"></ion-icon>
                        </button>
                        <data id="@item.Id"><b>@Html.DisplayFor(modelItem => count)</b></data>
                        <button onclick="add(item.Id, -1)" name="minus">
                            <ion-icon name="add-outline"></ion-icon>
                        </button>
                    </div>
                    <div class="price">@Html.DisplayFor(modelItem => item.Price)₽</div>
                </div>
            </div>
        </div>
    }
    <a class="category">Заказ</a>
    <div class="form">
        <div class="entry">
            <label for="name">*Имя:</label>
            <input id="name" placeholder="Александр" type="text" required>
        </div>
        <div class="entry">
            <label for="number">*Номер:</label>
            <input id="number" placeholder="8-800-555-35-35" pattern="[0-9]{1}-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}"
                type="text" required>
        </div>
        <div class="entry">
            <label for="address">*Адрес:</label>
            <input id="address" type="text" placeholder="Москва, ул. Пушкина, 20" required>
        </div>
        <p>* - обязательные поля</p>
        <p class="formfield">
            <label for="add-info">Доп. информация: </label>
            <textarea name="add-info" placeholder="Подъезд 2, этаж 5"></textarea>
        </p>
        <button class="form-buttons" type="submit">Отправить</button>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
